# Production Environment Variables
# Copy this file to .env.production and fill in the actual values

# Database Configuration
DB_HOST=your-prod-db-host.com
DB_PORT=5432
DB_NAME=social_book_production
DB_USERNAME=db_user
DB_PASSWORD=your_secure_password

# JWT Configuration
JWT_SECRET=your-very-secure-jwt-secret-key-min-32-chars
JWT_EXPIRATION=86400000

# Mail Configuration (for production SMTP)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your_app_password

# Frontend Configuration
FRONTEND_ACTIVATION_URL=https://yourdomain.com/activate-account

# File Upload Configuration
FILE_UPLOAD_PATH=/app/uploads

# Server Configuration
SERVER_PORT=8080

# Spring Profile (set to prod for production)
SPRING_PROFILES_ACTIVE=prod
